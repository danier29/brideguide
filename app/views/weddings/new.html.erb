<!-- Validation failure messages -->
<% if @wedding.errors.any? %>
  <% @wedding.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Wedding</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_wedding" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for wedding_date -->
      <div class="form-group">
        <label for="wedding_date" class="control-label">
          Wedding date
        </label>

        <input type="text" id="wedding_date" name="wedding_date" placeholder="Wedding date" class="form-control" value="<%= @wedding.wedding_date %>">
      </div>

      <!-- Label and input for couple_name -->
      <div class="form-group">
        <label for="couple_name" class="control-label">
          Couple name
        </label>

        <input type="text" id="couple_name" name="couple_name" placeholder="Couple name" class="form-control" value="<%= @wedding.couple_name %>">
      </div>

      <button class="btn btn-success">
        Create Wedding
      </button>
      or
      <a href="/weddings">Cancel</a>
    </form>
  </div>
</div>
