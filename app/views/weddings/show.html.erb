<div class="page-header">
  <h3>Wedding #<%= @wedding.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Wedding date</dt>
      <dd><%= @wedding.wedding_date %></dd>

      <dt>Couple name</dt>
      <dd><%= @wedding.couple_name %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/weddings" class="btn btn-primary">
        Back
      </a>
      <a href="/weddings/<%= @wedding.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_wedding/<%= @wedding.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
