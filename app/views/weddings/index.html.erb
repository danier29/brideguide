<div class="page-header">
  <h1>
    Weddings
    <a href="/weddings/new" class="btn btn-lg btn-success">New Wedding</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Wedding date</th>
        <th>Couple name</th>
        <th>Actions</th>
      </tr>

      <% @weddings.each do |wedding| %>
      <tr>
        <td><%= wedding.wedding_date %></td>
        <td><%= wedding.couple_name %></td>
        <td>
          <a href="/weddings/<%= wedding.id %>" class="btn btn-primary">Show</a>
          <a href="/weddings/<%= wedding.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_wedding/<%= wedding.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
