<div class="page-header">
  <h3><%= @task.task_title %></h3>
</div>

  <table class="table table-bordered">
    <colgroup>
            <col class="col-md-1">
            <col class="col-md-6">
        </colgroup>
        <tbody>
          <tr>
        <th>Task Description</th>
        <td><%= @task.task_short_desc %></td>
      </tr>

        <tr>
          <th>Task Due Date </th>
        <td><%= @task.due_date %> </td>
      </tr>

      <tr>
        <th>Task Completed Date </th>
        <td> <%= @task.date_completed %></td>
      </tr>

      <tr>
        <th>Task Notes</th>
        <td> <%= @task.task_note %> </td>
      </tr>

        <tr>
            <th>Task Assignees</th>
            <td> <%= @task.assignments.try(:user_id) %> </td>
        </tr>
</tbody>
      </table>

  <form>
  <div class="form-group">
    <form action="/create_assignment" method="post">
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">
      <input name="task_id" type="hidden" value="<%= @task.id %>">

<label for="user_id"> Assign this task to a person </label>

    <%= select_tag(:user_id, options_from_collection_for_select(User.order("name ASC"), :id, :name), :class => "form-control") %>

        <p class="help-block">
    </div>
  <button type="submit" class="btn btn-default">Submit</button>
  </form>

    <div class="btn-group btn-group-justified">
      <a href="/tasks" class="btn btn-primary">
        Back
      </a>
      <a href="/tasks/<%= @task.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_task/<%= @task.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
