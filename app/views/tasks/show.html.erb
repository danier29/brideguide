<div class="page-header">
  <h1><%= @task.task_title %></h1>
  <a href="/tasks" class="btn btn-secondary btn-sm">Back to all tasks</a>
</div>

  <table class="table table-bordered">
    <colgroup>
            <col class="col-md-1">
            <col class="col-md-6">
        </colgroup>
        <tbody>
          <tr>
        <th>Task Description</th>
        <td><%= @task.task_short_desc %></td>
      </tr>

        <tr>
          <th>Task Due Date </th>
        <td><%= @task.due_date %> </td>
      </tr>

      <tr>
        <th>Task Completed Date </th>
        <td> <%= @task.date_completed %></td>
      </tr>

      <tr>
        <th>Task Notes</th>
        <td> <%= @task.task_note %> </td>
      </tr>

            </tbody>
      </table>

      <a href="/tasks/<%= @task.id %>/edit" class="btn btn-warning btn-sm">Edit this task</a>
      <a href="/delete_task/<%= @task.id %>" class="btn btn-danger btn-sm">Delete task </a>
