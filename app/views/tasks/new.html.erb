<!-- Validation failure messages -->
<% if @task.errors.any? %>
  <% @task.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Task</h3>
</div>

<div class="container">
<div class="row">
  <div class="col-md-12">
    <form action="/create_task" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

          <!-- Label and input for wedding_id -->
      <div>
        <input type="hidden" name="wedding_id" value="<%= current_user.wedding.id %>">
      </div>

      <!-- Label and input for task_title -->

      <div class="form-group row">
           <label for="task_title" class="col-sm-2 col-form-label"> Task Title </label>
           <div class="col-sm-4">
             <input type="text" id="task_title" name="task_title" placeholder="i.e. choose the venue, find a photographer" class="form-control" value="<%= @task.task_title %>">
           </div>
         </div>

         <div class="form-group row">
              <label for="due_date" class="col-sm-2 col-form-label"> Due Date </label>
              <div class="col-sm-2">
                <input type="date" id="due_date" name="due_date" placeholder="mm/dd/yy" class="form-control" value="<%= @task.due_date %>">
              </div>
            </div>

          <div class="form-group row">
               <label for="date_completed" class="col-sm-2 col-form-label"> Date Completed </label>
               <div class="col-sm-2">
                 <input type="date" id="date_completed" name="date_completed" placeholder="mm/dd/yy" class="form-control" value="<%= @task.date_completed %>">
               </div>
             </div>

         <div class="form-group row">
              <label for="task_short_desc" class="col-sm-2 col-form-label"> Description </label>
              <div class="col-sm-6">
                <textarea type="text" id="task_short_desc" name="task_short_desc" placeholder="Short description" class="form-control" value="<%= @task.task_short_desc %>" rows="4"></textarea>
              </div>
            </div>

            <div class="form-group row">
                 <label for="task_note" class="col-sm-2 col-form-label"> Notes </label>
                 <div class="col-sm-6">
                   <textarea type="text" id="task_note" name="task_note" placeholder="Notes, links, ideas" class="form-control" value="<%= @task.task_note %>" rows="4"> </textarea>
                 </div>
               </div>
  </div>



      <button class="btn btn-success">
        Create Task
      </button>
        or
      <a href="/tasks">Cancel</a>
    </form>
  </div>
</div>
