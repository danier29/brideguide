<div class="container">
		<% @users.each do |user| %>
	<div class="row">
        <div class="span6">
    		<ul class="thumbnails" style="list-style-type: none">
                <li class="span6 clearfix">

                  <div class="thumbnail clearfix">

                    <img src="<%= user.profile_photo %>" alt="Please add a profile picture!" class="pull-left span2 clearfix" height="200" width="200" style='margin-right:10px' hspace="20">

                    <div class="caption" class="pull-left">
                                            <h3>
                       <%= user.name %> 
                    </h3>

                      <p>
                      <large><b>Role: </b> <%= user.role %></large> </p>

                      <p> <large><b>Email: </b> <%= user.email %></large> </p>
                      </p>

                    </div>
                  </div>
                </ul>
              </div>
            </div>
						<% end %>
          </div>
