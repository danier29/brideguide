<div class="page-header">
  <h1>
    Forums
    <a href="/forums/new" class="btn btn-lg btn-success">New Forum</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Title</th>
        <th>Actions</th>
      </tr>

      <% @forums.each do |forum| %>
      <tr>
        <td><%= forum.title %></td>
      <td>
          <a href="/forums/<%= forum.id %>" class="btn btn-primary">Show</a>
          <a href="/forums/<%= forum.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_forum/<%= forum.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
