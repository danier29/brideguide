<!-- Validation failure messages -->
<% if @forum.errors.any? %>
  <% @forum.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Forum</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_forum" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for title -->
      <div class="form-group">
        <label for="title" class="control-label">
          Title
        </label>

        <input type="text" id="title" name="title" placeholder="Title" class="form-control" value="<%= @forum.title %>">
      </div>

      <!-- Label and input for wedding_id -->
      <div class="form-group">
        <label for="wedding_id" class="control-label">
          Wedding
        </label>

        <input type="text" id="wedding_id" name="wedding_id" placeholder="Wedding" class="form-control" value="<%= @forum.wedding_id %>">
      </div>

      <button class="btn btn-success">
        Create Forum
      </button>
      or
      <a href="/forums">Cancel</a>
    </form>
  </div>
</div>
