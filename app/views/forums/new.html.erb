<!-- Validation failure messages -->
<% if @forum.errors.any? %>
  <% @forum.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Start a forum!</h3>
</div>

<div class="container">
<div class="row">
  <div class="col-md-12">
    <form action="/create_forum" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

          <!-- Label and input for wedding_id -->
      <div>
        <input type="hidden" name="wedding_id" value="<%= current_user.wedding.id %>">
      </div>

      <!-- Label and input for forum_title -->

      <div class="form-group row">
           <label for="title" class="col-sm-2 col-form-label"> Forum Title </label>
           <div class="col-sm-4">
             <input type="text" id="title" name="title" placeholder="i.e. Travel plans, Budget Tips" class="form-control" value="<%= @forum.title %>">
           </div>
         </div>

      <button class="btn btn-success">
        Create Forum
      </button>
      or
      <a href="/forums">Cancel</a>
    </form>
  </div>
</div>
</div>
