<!-- Validation failure messages -->
<% if @assignment.errors.any? %>
  <% @assignment.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Assignment</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_assignment" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for task_id -->
      <div class="form-group">
        <label for="task_id" class="control-label">
          Task
        </label>

        <%= select_tag(:task_id, options_from_collection_for_select(Task.all, :id, :task_title, @assignment.task_id), :class => "form-control") %>
      <p class="help-block">

      </div>

      <!-- Label and input for user_id -->
      <div class="form-group">
        <label for="user_id" class="control-label">
          User
        </label>

        <%= select_tag(:user_id, options_from_collection_for_select(User.all, :id, :name, @assignment.user_id), :class => "form-control") %>
      <p class="help-block">
      </div>

      <button class="btn btn-success">
        Assign this task!
      </button>
      or
      <a href="/assignments">Cancel</a>
    </form>
  </div>
</div>
